# =============================================
# .htaccess - ByBot API
# Redirige todas las solicitudes al router principal
# =============================================

RewriteEngine On

# Detectar base automáticamente (comentado para que funcione en cualquier path)
# RewriteBase se detecta automáticamente desde la ubicación del .htaccess

# Si el archivo o directorio existe, no reescribir
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Redirigir todo a index.php
RewriteRule ^(.*)$ index.php [QSA,L]

# Seguridad: bloquear acceso directo a archivos sensibles
<FilesMatch "\.(php|json|md|log)$">
    <IfModule mod_authz_core.c>
        # Apache 2.4+
        Require all denied
    </IfModule>
</FilesMatch>

# Permitir solo index.php
<Files "index.php">
    <IfModule mod_authz_core.c>
        Require all granted
    </IfModule>
</Files>

# Headers de seguridad
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "DENY"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

